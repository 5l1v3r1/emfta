<plugin>


       
     <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.osate.analysis.emfta.actionSet"
            label="%actionSet.label"
            visible="false">

         <menu
               id="menu.osate"
               label="%menu.osate.label"
               path="project">
            <groupMarker name="file.grp"/>
            <separator name="instance.grp"/>
            <separator name="general.grp"/>
         </menu>

         <menu
               id="menu.analyses"
               label="%menu.analyses.label"
               path="menu.osate">
            <groupMarker name="top.grp"/>
            <groupMarker name="bottom.grp"/>

         </menu>

         <menu
               id="menu.fault"
               label="%menu.fault.label"
               path="menu.analyses/top.grp">
            <groupMarker name="stuff.grp"/>

         </menu>

         <action
               id="org.osate.aadl2.errormodel.analysis.actions.EMFTA.action"
               label="Generate EMFTA"
               tooltip="Generate EMFTA model from AADL/EMV2 model and open in Viewer"
               icon="icons/fta.png"
               class="org.osate.aadl2.errormodel.emfta.actions.EMFTAAction"
               menubarPath="menu.analyses/menu.fault/stuff.grp"
               toolbarPath="fault.toolbar"
               enablesFor="1">
            <enablement>
               <or>
                  <and>
                     <objectClass name="org.eclipse.core.resources.IFile"/>
                     <objectState name="extension" value="aaxl2"/>
                  </and>
                   <objectClass name="org.osate.aadl2.instance.ComponentInstance"/>
               </or>
            </enablement>
         </action>         
     </actionSet>
   </extension>


   <extension
   	   point="org.eclipse.ui.perspectiveExtensions">
   	   <perspectiveExtension
   		   targetID="org.osate.ui.perspective.AadlPerspective">
   		   <actionSet
   		 	   id="org.osate.analysis.emfta.actionSet"/>
   	   </perspectiveExtension>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.osate.analysis.architecture.oc1"
            objectClass="java.lang.Object">
            
         <visibility>
         
            <or>
               <and>
                  <objectClass name="org.eclipse.core.resources.IFile"/>
                  <objectState name="extension" value="aaxl2"/>
               </and>
               <objectClass name="org.osate.aadl2.instance.SystemInstance"/>
            </or>
         </visibility> 

         <menu
               id="org.osate.ui.popupMenu.Analyses"
               label="%popupMenu.analyses.label"
               path="additions">
            <groupMarker name="anal.grp"/>
            <groupMarker name="subMenus.grp"/>

         </menu>

         <menu
               id="org.osate.analysis.architecture.popupMenu.Fault"
               label="%popupMenu.Fault.label"
               path="org.osate.ui.popupMenu.Analyses/subMenus.grp">
            <groupMarker name="anal.grp"/>

         </menu>
        
         <action
               id="org.osate.aadl2.errormodel.analysis.actions.EMFTA.popupAction"
               label="EMFTA export"
               tooltip="EMFTA export"
               icon="icons/fta.png" 
               class="org.osate.aadl2.errormodel.emfta.actions.EMFTAAction"
               menubarPath="org.osate.ui.popupMenu.Analyses/org.osate.analysis.architecture.popupMenu.Fault/anal.grp"
               enablesFor="1"/>

              
      </objectContribution>

   </extension>
   
     <extension
         point="org.eclipse.ui.commands">
     <category
            id="org.osate.emfta.category.commands"
            name="Commands related to EMFTA">
     </category>

     <command categoryId="org.osate.emfta.category.commands"
            id="org.osate.emfta.commands.GraphicFTA"
            description="View Graphic FTA"
            name="Graphic FTA">
     </command>     
     <command categoryId="org.osate.emfta.category.commands"
            id="org.osate.emfta.commands.TableFTA"
            description="View FTA Table"
            name="FTA Table">
     </command>     
     <command categoryId="org.osate.emfta.category.commands"
            id="org.osate.emfta.commands.CutsetReport"
            description="View Minimal Cutset Report"
            name="Minimal Cutset Report">
     </command>     

    </extension>
    
    
    
    <extension point="org.eclipse.ui.menus">
         <menuContribution locationURI="popup:org.osate.ui.navigator.AadlNavigator?after=additions">
			<command commandId="org.osate.emfta.commands.GraphicFTA" 
				style="push" tooltip="Graphic View FTA">
          <visibleWhen>
            <reference definitionId="org.osate.emfta.compatibleElementSelected">
            </reference>
         </visibleWhen>
			</command>
         </menuContribution>
         <menuContribution locationURI="popup:org.osate.ui.navigator.AadlNavigator?after=additions">
			<command commandId="org.osate.emfta.commands.TableFTA" 
				style="push" tooltip="Table View FTA">
          <visibleWhen>
            <reference definitionId="org.osate.emfta.compatibleElementSelected">
            </reference>
         </visibleWhen>
			</command>
         </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.osate.emftaviews.menus.main"
               label="EMFTA Views">
         <command
               commandId="org.osate.emfta.commands.GraphicFTA"
               icon="icons/fta.png"
               id="org.osate.emfta.commands.GraphicFTA"
               style="push">
            <visibleWhen>
               <reference
                     definitionId="org.osate.emfta.compatibleElementSelected">
               </reference>
            </visibleWhen>
         </command>
        <command
               commandId="org.osate.emfta.commands.TableFTA"
               icon="icons/fta.png"
               id="org.osate.emfta.commands.TableFTA"
               style="push">
            <visibleWhen>
               <reference
                     definitionId="org.osate.emfta.compatibleElementSelected">
               </reference>
            </visibleWhen>
         </command>
        <command
               commandId="org.osate.emfta.commands.CutsetReport"
               icon="icons/fta.png"
               id="org.osate.emfta.commands.CutsetReport"
               style="push">
            <visibleWhen>
               <reference
                     definitionId="org.osate.emfta.compatibleElementSelected">
               </reference>
            </visibleWhen>
         </command>
         </menu>
      </menuContribution>
 	</extension>
 	
   	<extension point="org.eclipse.ui.handlers">

        <handler
            class="org.osate.aadl2.errormodel.emfta.actions.TreeViewFTAHandler" 
            commandId="org.osate.emfta.commands.GraphicFTA">
      </handler>
       <handler
            class="org.osate.aadl2.errormodel.emfta.actions.TableViewFTAHandler" 
            commandId="org.osate.emfta.commands.TableFTA">
      </handler>
       <handler
            class="org.osate.aadl2.errormodel.emfta.actions.MinimalCutsetViewHandler" 
            commandId="org.osate.emfta.commands.CutsetReport">
      </handler>

     </extension>  
     <extension
          point="org.eclipse.core.expressions.definitions">
       <definition id="org.osate.emfta.compatibleElementSelected">
       	<and>
            <reference
                  definitionId="oneElementSelected">
            </reference>
	        <with variable="selection">
	           <iterate ifEmpty="false" operator="and">
	              <or>
	                <adapt type="org.eclipse.core.resources.IFile">
                       <or>
                          <test
                                args="extension"
                                property="org.eclipse.core.resources.extension"
                                value="emfta">
                          </test>
                       </or>
	                </adapt>
	              </or>
	           </iterate>
	        </with>
        </and>    
       </definition>
    </extension>
  <extension
       point="org.eclipse.core.expressions.definitions">
    <definition
          id="oneElementSelected">
       <with
             variable="selection">
            <count
                  value="1">
            </count>
             
       </with>
    </definition>
 </extension>
   

</plugin>
